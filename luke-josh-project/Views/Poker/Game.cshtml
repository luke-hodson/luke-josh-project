@model luke_josh_project.Models.ViewModels.GameViewModel
@{

    ViewBag.Title = "Game";
}
<h2>Manage games.</h2>

<div class="row">
    <div class="col-md-12">
        <h3>New game</h3>
        <div class="form-group">
            <label>Buy in</label>
            <input type="number" class="form-control" id="buy-in" />
        </div>

        <div class="form-group">
            <label>Winner takes all</label><br />
            <input type="checkbox" id="winner-takes-all" />
        </div>
        <div class="row">
            <div class="col-md-2">
                <label>Players</label>
                <span>Drag:</span>
                <div id="qlist">
                    @foreach (var item in Model.Users)
                    {
                        <div class="qitem">
                            <span data-item="@item.Id" class="question">@item.Name</span>
                            <input type="hidden" value="@item.Id" class="hidden-selected" />
                        </div>
                    }
                </div>
                <input type="submit" name="add" value="reset" onclick="game.buildDraggable()" />
            </div>
            <div class="col-md-6">
                <div>
                    <span>Drop:</span>
                    <div id="qselected">
                    </div>                    
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="button" id="submit-form" class="btn btn-primary" value="Submit" onclick="game.submit()" />
        </div>
    </div>
</div>

<script src="~/Scripts/JS/game.js"></script>
<script>
    var game = "";
    $(function () {       
        game = new Game();
        game.buildDraggable();
    });
</script>